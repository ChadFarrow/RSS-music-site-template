# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_BAND_NAME="Your Band Name"
NEXT_PUBLIC_BAND_SLUG="your-band-slug"
NEXT_PUBLIC_SITE_TITLE="Your Band Name - Lightning Music Platform"
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"

# ============================================
# LIGHTNING CONFIGURATION
# ============================================
# Boost Features
NEXT_PUBLIC_ENABLE_AUTO_BOOST=true
NEXT_PUBLIC_AUTO_BOOST_AMOUNT=25
NEXT_PUBLIC_DEFAULT_BOOST_AMOUNT=100

# ============================================
# OPTIONAL: ADMIN FEATURES
